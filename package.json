{
  "name": "academic-report-viewer",
  "version": "1.4.0",
  "description": "A minimal PDF viewer with several features to completely streamline your report writing workflow.",
  "main": "main.js",
  "productName": "Academic Report Viewer",
  "author": "Lukas",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging --log-level=0 --trace-warnings",
    "debug": "electron --inspect=5858 . --enable-logging",
    "dist": "electron-builder",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux",
    "dist-win": "electron-builder --win"
  },
  "keywords": [
    "pdf",
    "viewer",
    "latex",
    "tex",
    "pdf.js"
  ],
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "fetch": "^1.1.0",
    "pdfjs-dist": "^5.4.149"
  },
  "bin": {
    "arview": "./cli.js"
  },
  "build": {
    "appId": "com.sparkylc2.academic-report-viewer",
    "productName": "Academic Report Viewer",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!.gitignore",
      "!README.md"
    ]
  }
}
